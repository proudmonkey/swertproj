

@model List<Swertres.Web.Models.ViewModels.BetSummaryModel>
<div>
    <table class="table table-striped table-condensed table-hover">
        <thead>
            <tr>
                <th colspan="3" style="text-align:center">RUMBLE</th>
            </tr>
            <tr>
                <th>Number</th>
                <th>Excess</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                string style = i.Excess > 0 ? "color:Red" : null;
                string number = i.IsDouble == true ? $"{ i.Number } D" : i.Number.ToString();
                <tr>
                    <td> @number</td>
                    <td style="@style"> @Html.DisplayFor(m => i.Excess)</td>
                </tr>
            }
        </tbody>
    </table>
</div>

